{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on",
        "useSortedAttributes": "on",
        "useSortedKeys": "on",
        "useSortedProperties": "on"
      }
    }
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!**/components/ui/**/*",
      "!**/dist/**/*",
      "!**/routeTree.gen.ts"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 300
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "asNeeded",
      "bracketSpacing": true,
      "quoteStyle": "single",
      "semicolons": "asNeeded"
    }
  },
  "json": {
    "formatter": {
      "enabled": false
    },
    "parser": {
      "allowComments": false,
      "allowTrailingCommas": false
    }
  },
  "linter": {
    "domains": {
      "project": "all",
      "react": "all",
      "test": "all"
    },
    "enabled": true,
    "rules": {
      "complexity": {
        "noExcessiveCognitiveComplexity": "error",
        "noUselessUndefinedInitialization": "off"
      },
      "correctness": {
        "noNodejsModules": "error",
        "noUndeclaredDependencies": "off",
        "noUndeclaredVariables": "error",
        "useImportExtensions": "off"
      },
      "nursery": {
        "noFloatingPromises": "error",
        "noUnresolvedImports": "off"
      },
      "performance": {
        "useTopLevelRegex": "error"
      },
      "recommended": true,
      "style": {
        "noImplicitBoolean": "off",
        "useBlockStatements": "off",
        "useNamingConvention": "error"
      },
      "suspicious": {
        "noConsole": "error",
        "noEmptyBlockStatements": "error"
      }
    }
  },
  "overrides": [
    {
      "includes": [
        "**/index.ts"
      ],
      "linter": {
        "rules": {
          "performance": {
            "noBarrelFile": "off",
            "noReExportAll": "off"
          }
        }
      }
    },
    {
      "includes": [
        "**/*.jsx",
        "**/*.tsx"
      ],
      "linter": {
        "rules": {
          "suspicious": {
            "noReactSpecificProps": "off"
          }
        }
      }
    },
    {
      "includes": [
        "**/*.test.ts"
      ],
      "javascript": {
        "globals": [
          "describe",
          "mock",
          "it",
          "beforeEach",
          "afterEach",
          "navigator",
          "expect",
          "vi"
        ]
      },
      "linter": {
        "rules": {
          "performance": {
            "useTopLevelRegex": "off"
          },
          "style": {
            "noUnusedTemplateLiteral": "off"
          }
        }
      }
    },
    {
      "includes": [
        "**/*.cli.*",
        "**/*.node.*",
        "**/*.test.*"
      ],
      "linter": {
        "rules": {
          "correctness": {
            "noNodejsModules": "off"
          }
        }
      }
    },
    {
      "includes": [
        "**/*.config.*",
        "**/*.workspace.*"
      ],
      "linter": {
        "rules": {
          "style": {
            "noDefaultExport": "off"
          }
        }
      }
    },
    {
      "assist": {
        "actions": {
          "source": {
            "useSortedKeys": "off"
          }
        }
      },
      "includes": [
        "libs/**/package.json"
      ]
    }
  ],
  "vcs": {
    "clientKind": "git",
    "enabled": true,
    "useIgnoreFile": true
  }
}