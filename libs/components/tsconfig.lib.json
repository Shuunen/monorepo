{
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["esnext", "dom"],
    "outDir": "out-tsc/tsc",
    "rootDir": "src",
    "tsBuildInfoFile": "out-tsc/tsc/tsconfig.lib.tsbuildinfo",
    "types": ["node", "@nx/react/typings/cssmodule.d.ts", "@nx/react/typings/image.d.ts", "vite/client"]
  },
  "exclude": ["out-tsc", "dist", "src/**/*.test.ts", "src/**/*.test.tsx", "src/**/*.stories.tsx", "vite.config.ts"],
  "extends": "../../tsconfig.base.json",
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "references": [
    {
      "path": "../vite-plugins/tsconfig.lib.json"
    },
    {
      "path": "../utils/tsconfig.lib.json"
    }
  ]
}
