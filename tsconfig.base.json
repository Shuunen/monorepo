{
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "customConditions": [
      "development"
    ],
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": [
      "es2022"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "paths": {
      "@monorepo/components": [
        "libs/components/src/index.ts"
      ],
      "@monorepo/utils": [
        "libs/utils/src/index.ts"
      ],
      "@monorepo/vite-plugins": [
        "libs/vite-plugins/src/index.js"
      ]
    },
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022"
  }
}
