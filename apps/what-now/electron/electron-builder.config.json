{
  "appId": "com.capatesto.app",
  "directories": {
    "buildResources": "resources"
  },
  "files": ["assets/**/*", "build/**/*", "capacitor.config.*", "app/**/*"],
  "linux": {
    "category": "Utility",
    "target": ["AppImage"]
  },
  "mac": {
    "category": "your.app.category.type",
    "target": "dmg"
  },
  "nsis": {
    "allowElevation": true,
    "allowToChangeInstallationDirectory": true,
    "oneClick": false
  },
  "publish": [],
  "win": {
    "icon": "assets/appIcon.ico",
    "target": "nsis"
  }
}
