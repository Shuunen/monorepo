{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "lib": ["dom", "ESNext"],
    "outDir": "out-tsc/tsc",
    "rootDir": "src",
    "tsBuildInfoFile": "out-tsc/tsc/tsconfig.app.tsbuildinfo",
    "types": ["node", "vite/client"]
  },
  "exclude": ["out-tsc", "dist", "src/**/*.test.ts", "vite.config.ts"],
  "extends": "../../tsconfig.base.json",
  "include": ["src/**/*.js", "src/**/*.ts"],
  "references": [
    {
      "path": "../../libs/utils/tsconfig.lib.json"
    }
  ]
}
