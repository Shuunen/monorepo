{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "lib": [
      "dom",
      "ESNext"
    ],
    "outDir": "dist",
    "rootDir": "src",
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "types": [
      "node",
      "vite/client"
    ]
  },
  "exclude": [
    "out-tsc",
    "dist",
    "src/**/*.test.ts",
    "vite.config.ts"
  ],
  "extends": "../../tsconfig.base.json",
  "include": [
    "src/**/*.js",
    "src/**/*.ts"
  ],
  "references": [
    {
      "path": "../../libs/shuutils/tsconfig.lib.json"
    }
  ]
}
