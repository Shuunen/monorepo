  "files": [
    "apps",
    "libs"
  ],
  "homepage": "https://github.com/Shuunen/monorepo",
  "keywords": [
    "monorepo",
    "react",
    "vite",
    "tailwindcss",
    "nx"
  ],
  "license": "MIT",
  "name": "@shuunen/source",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Shuunen/monorepo.git"
  },
  "scripts": {
    "build": "nx run-many -t build,list && echo build success",
    "check": "pnpm check:lock && pnpm check:repo && pnpm check:biome && pnpm check:oxlint && pnpm check:nx && echo check success",
    "check:biome": "biome check --error-on-warnings --write --unsafe && echo check:biome success",
    "check:eslint": "bun apps/one-file/eslint-cleaner.cli.ts && echo check:eslint success",
    "check:lock": "pnpm install && echo check:lock success",
    "check:nx": "nx affected -t typecheck && nx affected -t lint,test,build,e2e,list,build-storybook,test-storybook && echo check:nx success",
    "check:nx:all": "nx run-many -t typecheck && nx run-many -t lint,test,build,e2e,list,build-storybook && echo check:nx:all success",
    "check:oxlint": "oxlint --deny-warnings --fix --fix-suggestions --fix-dangerously && echo check:oxlint success",
    "check:repo": "repo-check && echo check:repo success",
    "check:tsc": "nx run-many -t typecheck && echo check:tsc success",
    "cs": "bun apps/config-sync",
    "lint": "nx run-many -t lint && pnpm check:biome && pnpm check:oxlint && echo lint success",
    "postversion": "git push && git push --tags",
    "preversion": "pnpm check",
    "sb": "pnpm run storybook:run",
    "shadcn:add": "bun libs/components/bin/add.cli.ts",
    "storybook:build": "nx build-storybook components && echo storybook:build success",
    "storybook:run": "nx run-storybook components",
    "storybook:test": "nx test-storybook components && echo storybook:test success",
    "test": "nx run-many -t test && echo test success",
    "test:bench": "vitest bench && echo test bench success",
    "test:update": "nx run-many -t test --update && echo test:update success",
    "test:watch": "vitest --coverage",
    "up:min": "npx taze minor --write"
  },
  "version": "0.0.0"
}