{
  "$schema": "https://json.schemastore.org/package",
  "author": "Romain Racamier-Lafon <romain.racamier@gmail.com>",
  "bugs": "https://github.com/Shuunen/monorepo/issues",
  "dependencies": {
    "@tailwindcss/vite": "4.1",
    "react": "19.1",
    "react-dom": "19.1",
    "react-router-dom": "7.6",
    "tailwindcss": "4.1",
    "tiny-glob": "0.2",
    "tsx": "4.20"
  },
  "description": "the monorepo for my beloved projects",
  "devDependencies": {
    "@biomejs/biome": "1.9",
    "@nx/devkit": "21.2",
    "@nx/js": "21.2",
    "@nx/playwright": "21.2",
    "@nx/react": "21.2",
    "@nx/vite": "21.2",
    "@nx/web": "21.2",
    "@nx/workspace": "21.2",
    "@playwright/test": "1.53",
    "@swc-node/register": "1.10",
    "@swc/core": "1.12",
    "@swc/helpers": "0.5",
    "@testing-library/dom": "10.4",
    "@testing-library/react": "16.3",
    "@types/node": "24.0",
    "@types/react": "19.1",
    "@types/react-dom": "19.1",
    "@vitejs/plugin-react": "4.5",
    "@vitest/coverage-v8": "3.2",
    "@vitest/ui": "3.2",
    "jiti": "2.4",
    "jsdom": "26.1",
    "nx": "21.2",
    "oxlint": "1.1",
    "repo-check": "1.46",
    "tslib": "2.8",
    "typescript": "5.8",
    "vite": "6.3",
    "vitest": "3.2"
  },
  "files": [
    "apps",
    "libs"
  ],
  "homepage": "https://github.com/Shuunen/monorepo",
  "keywords": [
    "monorepo",
    "react",
    "vite",
    "tailwindcss",
    "nx"
  ],
  "license": "MIT",
  "name": "@shuunen/source",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Shuunen/monorepo.git"
  },
  "scripts": {
    "check": "pnpm check:lock && pnpm check:repo && pnpm check:biome && pnpm check:oxlint && pnpm check:nx && echo check success",
    "check:biome": "biome check --error-on-warnings --write --unsafe && echo check:biome success",
    "check:lock": "pnpm install && echo check:lock success",
    "check:nx": "nx run-many -t lint,test,build,e2e,list,typecheck && echo check:nx success",
    "check:oxlint": "oxlint --deny-warnings --fix --fix-suggestions --fix-dangerously && echo check:oxlint success",
    "check:repo": "repo-check && echo check:repo success",
    "check:tsc": "tsc --noEmit && echo lint:tsc success",
    "cs": "bun apps/config-sync",
    "postversion": "git push && git push --tags",
    "preversion": "pnpm check",
    "test": "nx run-many -t test && echo test success",
    "test:bench": "vitest bench && echo test bench success",
    "test:update": "vitest --run --update && echo test update success",
    "test:watch": "vitest --coverage",
    "up:min": "npx taze minor --write"
  },
  "version": "0.0.0"
}
