{
  "[css]": {
    "editor.defaultFormatter": "oxc.oxc-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "oxc.oxc-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "oxc.oxc-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "oxc.oxc-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "oxc.oxc-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "oxc.oxc-vscode"
  },
  "[xml]": {
    "editor.defaultFormatter": "redhat.vscode-xml"
  },
  "cSpell.language": "en-GB",
  "cSpell.words": [
    "analyzer",
    "autodocs",
    "bddgen",
    "camwiegert",
    "Cena",
    "centered",
    "clearable",
    "cssmodule",
    "debouncer",
    "dequal",
    "devfile",
    "dialog",
    "dircolors",
    "epomaker",
    "Epomaker",
    "esbuild",
    "fakepath",
    "Hilfiger",
    "jozzo",
    "jridgewell",
    "linxo",
    "Linxo",
    "monday",
    "nodenext",
    "NOSONAR",
    "nrwl",
    "oxfmt",
    "oxlint",
    "phomemo",
    "prefault",
    "pyenv",
    "Registrator",
    "Romain",
    "scrollbars",
    "shadcn",
    "sunday",
    "tanstack",
    "télécom",
    "trmnl",
    "Trmnl",
    "tsgo",
    "unstub",
    "userscript",
    "utils",
    "vite",
    "vitest",
    "whatnow",
    "yoda",
    "ytdl",
    "zenity",
    "zxing"
  ],
  "css.lint.unknownAtRules": "ignore",
  "cucumberautocomplete.smartSnippets": true,
  "cucumberautocomplete.steps": ["**/tests/steps/*/*.ts"],
  "cucumberautocomplete.strictGherkinCompletion": true,
  "cucumberautocomplete.syncfeatures": "**/tests/features/**/*feature",
  "editor.defaultFormatter": "oxc.oxc-vscode",
  "editor.formatOnSave": true,
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "oxc.fixKind": "all",
  "oxc.unusedDisableDirectives": "deny",
  "typescript.experimental.useTsgo": true
}
